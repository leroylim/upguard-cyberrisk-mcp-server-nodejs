{
  "name": "upguard-cyberrisk-mcp-server",
  "version": "1.2.0",
  "description": "A Model Context Protocol server for interacting with the UpGuard CyberRisk API, providing risk assessment and management capabilities.",
  "license": "MIT",
  "author": "Han Yong Lim <hanyong.lim@gmail.com>",
  "type": "commonjs",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:stdio": "powershell -ExecutionPolicy Bypass -File start-stdio.ps1",
    "start:stdio:sh": "bash start-stdio.sh",
    "start:http": "powershell -ExecutionPolicy Bypass -File start-http.ps1",
    "start:http:sh": "bash start-http.sh",
    "start:http-stateless": "MCP_TRANSPORT_MODE=http MCP_SESSION_MANAGEMENT=false node src/index.js",
    "start:http-custom": "MCP_TRANSPORT_MODE=http MCP_HTTP_PORT=8080 MCP_HTTP_HOST=0.0.0.0 node src/index.js",
    "dev": "nodemon src/index.js",
    "dev:stdio": "MCP_TRANSPORT_MODE=stdio nodemon src/index.js",
    "dev:http": "MCP_TRANSPORT_MODE=http nodemon src/index.js",
    "dev:watch": "nodemon --watch src --ext js,json src/index.js",
    "test:http-client": "node examples/http-client.js",
    "demo:http": "concurrently \"npm run start:http\" \"sleep 3 && npm run test:http-client\"",
    "docs:generate": "node scripts/generate-docs.js",
    "docs:clean": "rimraf docs/generated",
    "docs:build": "npm run docs:clean && npm run docs:generate",
    "docs:extract": "node scripts/extract-tools-direct.js",
    "docs:build-real": "npm run docs:extract && npm run docs:clean && npm run docs:generate",
    "docs:html": "node scripts/generate-html-docs.js",
    "docs:full": "npm run docs:build-real && npm run docs:html",
    "docs:test": "node scripts/test-docs.js",
    "docs:export": "node scripts/export-docs.js",
    "docs:complete": "npm run docs:full && npm run docs:export",
    "docs:validate": "node scripts/validate-docs.js",
    "docs:all": "npm run docs:complete && npm run docs:test && npm run docs:validate",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "lint:check": "eslint src/ --max-warnings 0",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:integration": "jest --testMatch='**/__tests__/**/*.integration.test.js'",
    "security:check": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "docker:build": "docker build -t upguard-mcp-server .",
    "docker:run": "docker run -p 3000:3000 --env-file .env upguard-mcp-server",
    "docker:dev": "docker-compose --profile dev up",
    "docker:prod": "docker-compose up",
    "docker:clean": "docker-compose down && docker system prune -f",
    "format": "prettier --write src/**/*.js",
    "format:check": "prettier --check src/**/*.js",
    "validate": "npm run lint:check && npm run test:ci && npm run security:check",
    "prepare": "husky install || true",
    "precommit": "lint-staged",
    "health": "node -e \"require('./src/utils/health').getHealth().then(console.log)\"",
    "cache:clear": "node -e \"require('./src/utils/cache').generalCache.clear()\"",
    "metrics": "node -e \"require('./src/utils/health').getStats().then(console.log)\""
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.3",
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "winston": "^3.17.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^2.1.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^15.0.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.10",
    "supertest": "^6.3.0",
    "swagger-ui-dist": "^5.22.0"
  },
  "resolutions": {
    "zod": "^3.23.8"
  },
  "overrides": {
    "zod": "^3.23.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "jest --findRelatedTests --passWithNoTests"
    ]
  },
  "keywords": [
    "upguard",
    "cyberrisk",
    "mcp",
    "model-context-protocol",
    "security",
    "risk-assessment",
    "api-client"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leroylim/upguard-cyberrisk-mcp-server-nodejs.git"
  },
  "bugs": {
    "url": "https://github.com/leroylim/upguard-cyberrisk-mcp-server-nodejs/issues"
  },
  "homepage": "https://github.com/leroylim/upguard-cyberrisk-mcp-server-nodejs#readme"
}
